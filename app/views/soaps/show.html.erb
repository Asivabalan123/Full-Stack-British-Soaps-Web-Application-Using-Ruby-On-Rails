<p id="notice"><%= notice %></p>


<h3>Reviews</h3>
<% @soap.comments.each do |comment| %>
  <div class="well">
  <p><strong><%= comment.title %></strong>: <%= comment.description %>
  <%= link_to '[x]', [comment.soap, comment],
           method: :delete,
           data: { confirm:'Are you sure?'} %></p>
  </div>
<% end %>

<hr>
<h3>Add Review</h3>
<%= form_for([@soap, @soap.comments.build]) do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field(:title,{:class => 'form-control'}) %>
</p>
 <p>
  <%= f.label :description %><br>
  <%= f.text_area(:description,{:class => 'form-control'}) %>
</p>
 <p>
  <%= f.submit({:class => 'btn btn-default'}) %>
</p>
<% end %>

<hr>
<%= link_to 'Edit', edit_soap_path(@soap), :class => 'btn btn-default' %> |
<%= link_to 'Back', directors_path, :class => 'btn btn-default'%>
